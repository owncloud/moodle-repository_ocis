{
  "name": "owncloud/moodle-repository_ocis",
  "license": "GPL-3.0-or-later",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/owncloud/ocis-php-sdk.git"
    }
  ],
  "require": {
    "owncloud/ocis-php-sdk": "dev-main#e61c3d615ba4a5b7f8ac18f7279e004baf120ffc"
  },
  "replace": {
    "guzzlehttp/guzzle": "*",
    "guzzlehttp/psr7": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "moodlehq/moodle-cs": "^3.3"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "post-update-cmd": "find vendor/ \\( -name \"*tests*\" -o -name \".*\" \\) -exec rm -r \"{}\" +",
    "post-install-cmd": "find vendor/ \\( -name \"*tests*\" -o -name \".*\" \\) -exec rm -r \"{}\" +"
  }
}
